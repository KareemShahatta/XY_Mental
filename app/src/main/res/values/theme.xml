<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Light theme that is dependent on the system theme-->
    <style name="XY_Base" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorBackground">@color/light</item>
        <item name="android:textColor">@color/light_contrast</item>
    </style>

    <style name="XY_Blue" parent="XY_Base">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/light</item>
        <item name="colorPrimaryContainer">@color/blue_primary_container</item>
    </style>

    <style name="XY_Green" parent="XY_Base">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorOnPrimary">@color/light</item>
        <item name="colorPrimaryContainer">@color/green_primary_container</item>
    </style>

    <style name="XY_Orange" parent="XY_Base">
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorOnPrimary">@color/light</item>
        <item name="colorPrimaryContainer">@color/orange_primary_container</item>
    </style>

    <style name="XY_Purple" parent="XY_Base">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorOnPrimary">@color/light</item>
        <item name="colorPrimaryContainer">@color/purple_primary_container</item>
    </style>
</resources>